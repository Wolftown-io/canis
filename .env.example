# VoiceChat Environment Configuration
# Copy this file to .env and fill in your values

# ==========================================================================
# Server Configuration
# ==========================================================================

# Domain for your VoiceChat instance (used by Traefik for SSL)
DOMAIN=chat.yourdomain.com

# Public server URL (will be used as default in client)
SERVER_URL=https://chat.yourdomain.com

# ==========================================================================
# Security
# ==========================================================================

# PostgreSQL password
POSTGRES_PASSWORD=changeme_random_password_here

# JWT secret (generate with: openssl rand -hex 32)
JWT_SECRET=changeme_random_secret_here

# ==========================================================================
# Email for Let's Encrypt SSL certificates
# ==========================================================================
ACME_EMAIL=admin@yourdomain.com

# ==========================================================================
# Optional: S3 Storage
# ==========================================================================
# Leave empty to use MinIO (included in docker-compose.dev.yml)
S3_ENDPOINT=
S3_BUCKET=voicechat
S3_ACCESS_KEY=
S3_SECRET_KEY=

# ==========================================================================
# Optional: OIDC Authentication
# ==========================================================================
OIDC_ISSUER_URL=
OIDC_CLIENT_ID=
OIDC_CLIENT_SECRET=

# ==========================================================================
# Optional: TURN Server (for WebRTC behind NAT/Firewall)
# ==========================================================================
TURN_SERVER=
TURN_USERNAME=
TURN_CREDENTIAL=

# ==========================================================================
# WebRTC Configuration
# ==========================================================================
# Your server's public IP (auto-detected if not set)
PUBLIC_IP=

# RTP port range for voice (default: 10000-10100)
RTP_PORT_MIN=10000
RTP_PORT_MAX=10100
